{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@tempo-api/task-service", 
                        "./packages/task-service/src"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    },
    
    "rules": {
        "no-return-await": "off",
        
        "import/no-unresolved": "off", 
        
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        
        "import/no-relative-packages": "off",
        "consistent-return": "error",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-underscore-dangle": "off"
    },
    
    "overrides": [
        {
            "files": [
                "src/__tests__/**/*.js",
                "**/*.test.js"
            ],
            "rules": {
                "import/no-extraneous-dependencies": [
                    "error",
                    {
                        "devDependencies": true
                    }
                ],
                "no-process-exit": "off"
            }
        }
    ]
}